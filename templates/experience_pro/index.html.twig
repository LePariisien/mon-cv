{% extends 'base.html.twig' %}

{% block title %}Expériences Professionnelles{% endblock %}

{% block body %}
    <style>
        li.list-group-item {
            background: none;
            border: none;
        }        
        .competence-bulle {
        display: inline-block;
        background-color: #4CAF50; /* Couleur verte */
        color: white;
        padding: 4px 8px;
        margin: 2px;
        border-radius: 10px;
        transition: transform 0.2s;
        }
        .competence-bulle:hover {
        transform: scale(1.2); /* Grossissement de 10% au survol */
        }
    </style>
<div class="container mt-3">
    <h1 class="text-center text-white">Expériences Professionnelles</h1>

    <ul class="list-group">
        {% for experience in experiences %}
        <li class="list-group-item text-white">
            <h4>{{ experience.nomentreprise }}</h4>
            <p><strong>Poste :</strong> {{ experience.poste }}</p>
            <p><strong>Période :</strong> {{ experience.datedebut|date('d/m/Y') }} -
                {{ experience.datefin|date('d/m/Y') }}</p>
            <p><strong>Compétences :</strong>
                {% for competence in experience.competence %}
                    <span class="competence-bulle">{{ competence }}</span>
                {% endfor %}
            </p>
            <p><strong>Description :</strong> {{ experience.description|nl2br }}</p>
            <p><strong>Adresse :</strong> {{ experience.adresse }}, {{ experience.cp }}</p>
        </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}

