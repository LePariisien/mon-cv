{% extends 'base.html.twig' %}

{% block title %}Expériences Professionnelles{% endblock %}

{% block body %}
<div class="container mt-3">
    <h1 class=" text-white animated-text text-center">Parcours Professionnelles</h1>
    <ul class="list-group">
        {% for experience in experiences %}
        <li class="list-group-item text-white mt-5">
            <div class="row">
                <div class="col-md-2">
                    <img src="{{ asset('images/' ~ experience.logo) }}" alt="Logo de l'entreprise" class="company-logo">
                    <img src="{{ asset('images/' ~ experience.photo) }}" alt="Logo de l'entreprise"
                        class="company-image">
                </div>
                <div class="col-md-10">
                    <h4>{{ experience.nomentreprise }}</h4>
                    <p class="mt-3">
                        <img src="{{ asset('images/cartes-et-drapeaux.png') }}" alt="Location Icon"
                            class="icon small-icon"><strong>Adresse :</strong>
                        {{ experience.adresse }}, {{ experience.cp }}
                    </p>
                    <p>
                        <img src="{{ asset('images/periode-de-temps.png') }}" alt="Calendar Icon"
                            class="icon small-icon"><strong>Période :</strong>
                        {{ experience.datedebut|date('d/m/Y') }} - {{ experience.datefin|date('d/m/Y') }}
                    </p>
                    <p>
                        <img src="{{ asset('images/contrat.png') }}" alt="Contract Icon"
                            class="icon small-icon"><strong>Type de contrat :</strong>
                        {{ experience.typecontrat }}
                    </p>
                    <p>
                        <img src="{{ asset('images/travailler-avec-un-ordinateur-portable.png') }}" alt="Job Icon"
                            class="icon small-icon"><strong>Poste :</strong>
                        {{ experience.poste }}
                    </p>
                    <p>
                        <img src="{{ asset('images/profil.png') }}" alt="Job Icon"
                            class="icon small-icon"><strong>Compétences :</strong>
                        {% for competence in experience.competence %}
                        <span class="competence-bulle">{{ competence }}</span>
                        {% endfor %}
                    </p>
                    <p>
                        <img src="{{ asset('images/description-de-lemploi.png') }}" alt="Description Icon"
                            class="icon small-icon"><strong>Description :</strong>
                        {{ experience.description|nl2br }}
                    </p>
                </div>
            </div>
        </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}