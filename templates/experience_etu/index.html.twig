{% extends 'base.html.twig' %}

{% block title %}Expériences Étudiantes{% endblock %}

{% block body %}
<div class="container mt-3">
    <h1 class=" text-white text-center">Parcours Étudiantes</h1>
    <ul class="list-group">
        {% for experience in experiences %}
        <li class="list-group-item text-white mt-5">
            <div class="row">
                <div class="col-md-10">
                    <h4>{{ experience.nomecole }}</h4>
                    <p class="mt-3">
                        <img src="{{ asset('images/cartes-et-drapeaux.png') }}" alt="Location Icon"
                            class="icon small-icon"><strong>Adresse :</strong>
                        {{ experience.adresse }}, {{ experience.cp }}
                    </p>
                    <p>
                        <img src="{{ asset('images/periode-de-temps.png') }}" alt="Calendar Icon"
                            class="icon small-icon"><strong>Période :</strong>
                        {{ experience.datedebut|date('d/m/Y') }} - {{ experience.datefin|date('d/m/Y') }}
                    </p>
                    <p>
                        <img src="{{ asset('images/diplome.png') }}" alt="Diplome Icon"
                            class="icon small-icon"><strong>Diplôme :</strong>
                        {{ experience.diplome }}
                    </p>
                    <p>
                        <img src="{{ asset('images/profil.png') }}" alt="Job Icon"
                            class="icon small-icon"><strong>Compétences :</strong>
                        {% for competence in experience.competence %}
                        <span class="competence-bulle2">{{ competence }}</span>
                        {% endfor %}
                    </p>
                </div>
            </div>
        </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}